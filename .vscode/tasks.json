{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "SDL2",
            "command": "C:\\Program Files\\mingw-w64\\bin\\g++.exe",
            "args": [
                "-g",
                "engine\\src\\*.cpp",
                "-o",
                "build\\main.exe",
                "-Iinclude",
                "-Iengine/modules/SDL2/include",
                "-Lengine/modules/SDL2/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2"
                // "-mwindows"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}